<div class="foods-btn">
  <h2><%= @inventory.name %></h2>
  <%= link_to 'Add Food', new_inventory_inventory_food_path(:inventory_id =>  @inventory.id )%>
</div>
<% if @foods.empty? %>
<p>No foods yet. here is the iventory decription though!</p>
<p> <%= @inventory.description %></p>
<% else %>
<table class="table table-hover table-striped table-bordered">
  <thead class="bg-color">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |f| %>
      <tr>
        <td><%= f.food.food %></td>
        <td><%= f.quantity %></td>
        <td>
        <% if can? :destroy, f %>
        <%= link_to 'Remove', inventory_inventory_food_path(:inventory_id => @inventory.id, :id => f.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
        class: "btn btn-outline-danger", type:"button" %>
        <% else %>
        <%= link_to 'View', inventory_inventory_food_path(:inventory_id => @inventory.id, :id => f.id), class: "btn btn-outline-success", type:"button", style: "width: 5.5rem" %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>